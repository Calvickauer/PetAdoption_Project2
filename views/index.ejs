<h2>Homepage</h2>
 
<div class="container">
    <form method="POST" action="./results" id="pet-form">
      <div class="form-group">
        <label for="animal">Animal</label>
        <select id="animal" name="animal" class="form-control form-control-lg mb-3 ">
          <option value="Dog">Dog</option>
          <option value="Cat">Cat</option>
          <option value="Bird">Bird</option>
          <option value="Horse">Horse</option>
        </select>
      <input type="text" id="zip" class="form-control form-control-lg mt-2" name="Zipcode"
      placeholder="Enter Your Zipcode">
      <input type="submit" value="Find Available Pets!" class="btn btn-danger btn-lg btn-block mt-3">
      </div>
    </form>
    <div id="results"></div>
  </div>

