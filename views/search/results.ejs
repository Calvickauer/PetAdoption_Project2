<img src="/assets/images/adoptions33.png" id="MainIMG" class="img-fluid" alt=""> 
<div class="results-title">
    <h1>Results</h1>
</div>

<% if (!currentUser) {%>

<% let each = 1; %> 
<div class="container">
    <div class="row-fluid">
        <% animals.forEach(animal => { %>
            <h2><%= each %> </h2>
            <div class="text-align card-columns-fluid mt-3">
                <div class="card card-body mb-3 col-sm-6">
                    <div class="row">
                    <div class="card-header">
                        <h5 class="card-title"> Name: <%= animal.name %> </h5>
                    </div>
                    <div class="">
                    <p class="text-secondary">Animal Type: <%= animal.type %> </p>
                    <p class="text-secondary">State: <%= animal.contact.address.state %>, <%= animal.contact.address.postcode %></p>
                    <ul class="list-group">
                        <li class="list-group-item">Status: <%= animal.status %> </li>
                    </ul>
                    </div>
                    <div id="SmallImagesDiv">
                        <% if(animal.photos.length > 0 && animal.primary_photo_cropped !== null){ %>
                            <img src=<%= animal.primary_photo_cropped.small %> alt="petImg" id="SmallImages" class="rounded-circle img-fluid mb-3 mt-2">
                            <% } else { %>
                                <% console.log('no photos'); %> 
                          <% } %>
                    </div>
                </div>
                <a href="/auth/signup" class="btn btn-warning btn-block mt-2 m-3 ">For more info on <%=animal.name %> sign up here!! </a>
        </div>
        
        </div>
        <% each++ %> 
        <% }) %> 
        <% } else { %>
            <% let each = 1; %> 
            <% animals.forEach(animal => { %>
                <div class="text-align card-columns-fluid mt-3">
                    <div class="card card-body mb-3 col-sm-4 results-body">
                        <div class="row">
                            <div class="card-header results-card-header">
                                <h3 class="card-title"> Name: <%= animal.name %> </h3>
                            </div>
                            <div>
                        <ul class="list-group">
                            <li class="list-group-item">Status: <%= animal.status %> </li>
                        </ul>
                    <p class="text-secondary">Animal Type: <%= animal.type %> </p>
                    <p class="text-secondary"> <%= animal.contact.address.state %>, <%= animal.contact.address.postcode %></p>
                </div>

                <div id="SmallImagesDiv">
                    <% if(animal.photos.length > 0 && animal.primary_photo_cropped !== null){ %>
                        <img src=<%= animal.primary_photo_cropped.small %> alt="petImg" class="Pet__image">
                        <% } else { %>
                            <img src="/assets/images/noImage.png" alt="no image found" class="rounded-circle img-fluid mb-3 mt-2 no-img">
                            <% console.log('no photos'); %> 
                            <% } %>
                        </div>
                    <div class="container">
                <form method="POST" action="./animal" id="animalId" class="m-2">
                    <button name="animalId" type="submit" class="More__info" value=<%=animal.id%>>More info on <%= animal.name %> </button>
                </form>

                <form action="/search/favorite" method="post" id="favorite">
                    <input type="text" value="<%= animal.id %>" name="petID"  hidden>
                    <input type="text" value="<%= currentUser.id %>" name="userID"  hidden>
                    <button type="submit" class="Add__favorite">Add to Favorites</button>
                </form>
            </div>
        </div>
        </div>
        
        </div>
            <% each++ %> 
            <% }) %> 
        <% } %>
    
    </div>
</div>
<div class="results-title">
    <h1>End Results</h1>
</div>
<div class="">
    <img src="/assets/images/dogsCutOut.png" id="MainIMG" class="img-fluid" alt=""> 
<!-- 
    <img src="/assets/images/Tyson.png" id="TysonIMG" class="img-fluid" alt="">  -->
</div>
